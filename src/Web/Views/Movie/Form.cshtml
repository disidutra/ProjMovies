@model Movie
@{
    ViewData["Title"] = ViewBag.Title;
}

<form asp-action="CreateOrUpdate">
  <input type="hidden" asp-for="Id" >
  <input type="hidden" asp-for="DateCreated" >
  <div class="form-group">
    <label for="Name">Name</label>
    <input type="text" asp-for="Name" class="form-control" placeholder="Name" autofocus>    
  </div>  

  <div class="form-group">
    <label for="Active">Active</label>
    <select asp-for="Active" class="form-control" placeholder="Select...">            
      <option value="true">Yes</option>
      <option value="false">No</option>
    </select>
  </div>  

  <div class="form-group">
    <label for="Name">Genre</label>
    <select asp-for="GenreId" asp-items="@ViewBag.GenreList" class="form-control" placeholder="Select...">            
    </select>

  </div>  

  <button class="btn btn-light" asp-action="Index">Cancel</button>
  <button type="submit" class="btn btn-primary">Save</button>
</form>